<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/additionalFieldLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/additionalFieldTextView"
            android:layout_weight="0.5"
            android:layout_width="fill_parent"
            style="@style/overview_element"
            android:text="@string/additional_field_placeholder"/>

        <TextView
            android:id="@+id/additionalFieldDataTextView"
            android:layout_weight="0.5"
            android:layout_width="fill_parent"
            android:textAlignment="viewEnd"
            style="@style/overview_element"
            tools:text="@string/unknown_value"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>